        "operationId": "ai_optimization_llm_mentions_locations_and_languages",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {},
                "required": []
              }
            }
          }
        }
      }
    },
    "/v3/ai_optimization/llm_mentions/search/live.ai": {
      "post": {
        "description": "This endpoint provides aggregated LLM mentions metrics grouped by the most frequently mentioned pages for the specified target",
