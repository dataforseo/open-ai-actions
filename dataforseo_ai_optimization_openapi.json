{
  "openapi": "3.1.0",
  "info": {
    "title": "DataForSEO Ai Optimization API",
    "description": "Access to DataForSEO Ai Optimization tools for SEO research and analysis",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://api.dataforseo.com"
    }
  ],
  "paths": {
    "/v3/ai_optimization/ai_keyword_data/locations_and_languages.ai": {
      "get": {
        "description": "Utility tool for ai_keyword_data_search_volume to get list of availible locations and languages",
        "operationId": "ai_optimization_keyword_data_locations_and_languages"
      }
    },
    "/v3/ai_optimization/ai_keyword_data/keywords_search_volume/live.ai": {
      "post": {
        "description": "This endpoint provides search volume data for your target keywords, reflecting their estimated usage in AI LLMs",
        "operationId": "ai_optimization_keyword_data_search_volume",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "keywords": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Keywords. The maximum number of keywords you can specify: 1000"
                  },
                  "location_name": {
                    "type": "string",
                    "default": "United States",
                    "description": "full name of the location, example: 'United Kingdom', 'United States'"
                  },
                  "language_code": {
                    "type": "string",
                    "description": "Search engine language code (e.g., 'en')"
                  }
                },
                "required": [
                  "keywords",
                  "language_code"
                ]
              }
            }
          }
        }
      }
    },
    "/v3/ai_optimization/{llm_type}/llm_responses/models.ai": {
      "get": {
        "description": "Utility tool for ai_optimization_llm_response to get list of availible locations and languages",
        "operationId": "ai_optimization_llm_models",
        "parameters": [
          {
            "name": "llm_type",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "claude",
                "gemini",
                "chat_gpt",
                "perplexity"
              ],
              "description": "LLM type"
            }
          }
        ]
      }
    },
    "/v3/ai_optimization/{llm_type}/llm_responses/live.ai": {
      "post": {
        "description": "This endpoint allows you to retrieve structured responses from a specific AI model, based on the input parameters",
        "operationId": "ai_optimization_llm_response",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_prompt": {
                    "type": "string",
                    "description": "Prompt for the AI model. The question or task you want to send to the AI model. You can specify up to 500 characters in the user_prompt field"
                  },
                  "model_name": {
                    "type": "string",
                    "description": "name of the AI model. consists of the actual model name and version name. if not sure which model to use, first call the ai_optimization_llm_models tool to get list of available models for the specified llm_type"
                  },
                  "temperature": {
                    "type": "number",
                    "description": "randomness of the AI response optional field higher values make output more diverse; lower values make output more focused;"
                  },
                  "top_p": {
                    "type": "number",
                    "description": "diversity of the AI response, optional field, controls diversity of the response by limiting token selection;"
                  },
                  "web_search": {
                    "type": "boolean",
                    "description": "enable web search for current information. When enabled, the AI model can access and cite current web information;"
                  }
                },
                "required": [
                  "user_prompt",
                  "model_name"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "name": "llm_type",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "claude",
                "gemini",
                "chat_gpt",
                "perplexity"
              ],
              "description": "LLM type"
            }
          }
        ]
      }
    },
    "/v3/ai_optimization/llm_mentions/available_filters.ai": {
      "post": {
        "description": "This endpoint provides all the necessary information about filters that can be used with AI Optimization LLM Mentions API endpoints",
        "operationId": "ai_optimization_llm_mentions_filters",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {},
                "required": []
              }
            }
          }
        }
      }
    },
    "/v3/ai_optimization/llm_mentions/locations_and_languages.ai": {
      "post": {
